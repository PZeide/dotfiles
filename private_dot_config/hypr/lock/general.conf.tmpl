general {
  disable_loading_bar = true
  ignore_empty_input = true
  hide_cursor = true
}

background {
  monitor =
  path = screenshot

  blur_passes = 3
  blur_size = 6
  contrast = 0.8916
  brightness = 0.7172
  vibrancy = 0.1696
  vibrancy_darkness = 0
}

input-field {
  {{/* Show input field only on main monitors of each host */}}
  {{ if eq .chezmoi.hostname "pc-arch-thibaud" }}
  monitor = DP-1
  {{ else if eq .chezmoi.hostname "lap-arch-thibaud" }}
  monitor = eDP-1
  {{ end }}

  size = 350, 70
  outline_thickness = 0
  outer_color = rgba(0, 0, 0, 1)

  dots_size = 0.1
  dots_spacing = 0.5
  dots_center = true

  font_color = rgb(255, 255, 255)
  inner_color = rgba(0, 0, 0, 0.35)
  check_color = rgba(204, 136, 34, 0.35)
  fail_color = rgba(204, 34, 34, 0.35)

  fade_on_empty = false
  font_family = SF Pro Display UltraLight
  placeholder_text = <span foreground="##ffffff" font_family="SF Pro Display">ï€‡ <b>$USER</b></span>
  fail_text = <span foreground="##ffffff" font_family="SF Pro Display">$FAIL <b>($ATTEMPTS)</b></span>

  hide_input = false
  position = 0, -470
  halign = center
  valign = center
  zindex = 10
}

# --
# Time & date
# --

label {
  monitor =
  text = cmd[update:1000] echo -e "$(date +"%H")"
  color = rgb(255, 255, 255)
  shadow_pass = 2
  shadow_size = 3
  shadow_color = rgb(0, 0, 0)
  shadow_boost = 1.2
  font_size = 150
  font_family = SF Pro Display Heavy
  position = 0, 80
  halign = center
  valign = center
}

label {
  monitor =
  text = cmd[update:1000] echo -e "$(date +"%M")"
  color = rgb(255, 255, 255)
  shadow_pass = 2
  shadow_size = 3
  shadow_color = rgb(0, 0, 0)
  shadow_boost = 1.2
  font_size = 150
  font_family = SF Pro Display Heavy
  position = 0, -80
  halign = center
  valign = center
}


label {
  monitor =
  text = cmd[update:1000] echo -e "$(date +"%A, %d %B %G")"
  color = rgb(255, 255, 255)
  font_size = 18
  font_family = SF Pro Display Heavy
  position = 0, -190
  halign = center
  valign = center
}

# --
# Location & weather
# --

label {
  monitor =
  text = cmd[update:1000] echo -e "$(fish -c "ipgeo country"), $(fish -c "ipgeo city")"
  color = rgb(255, 255, 255)
  font_size = 14
  font_family = SF Pro Display Bold
  position = 0, -70
  halign = center
  valign = top
}

label {
  monitor =
  text = cmd[update:1000] echo -e "$(fish -c "weather")"
  color = rgb(255, 255, 255)
  font_size = 14
  font_family = SF Pro Display Bold
  position = 0, -100
  halign = center
  valign = top
}


