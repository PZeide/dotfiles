# --
# Monitors configuration
# --

{{ if eq .chezmoi.hostname "pc-arch-thibaud" }}

monitor = DP-1, 2560x1440@240, 0x0, 1.25, bitdepth, 10
monitor = DP-2, 1920x1080@144, -1920x80, 1
monitor = , preferred, auto, 1

{{ else if eq .chezmoi.hostname "lap-arch-thibaud" }}

monitor = eDP-1, 1920x1080@144, 0x0, 1
monitor = , preferred, auto, 1

{{ end }}

# --
# General configuration
# --

general {
  border_size = 3
  gaps_in = 6
  gaps_out = 18

  layout = dwindle
  resize_on_border = true

  col.active_border = $border_active1 $border_active2 45deg
  col.inactive_border = $background_inactive

  # Allow tearing for games with 'immediate' rule applied to them
  allow_tearing = true
}

# --
# Decoration
# --

decoration {
  rounding = 20

  drop_shadow = true
  shadow_ignore_window = true
  shadow_range = 20
  shadow_offset = 0 2
  shadow_render_power = 2
  col.shadow = rgba(0000001a)

  blur {
    enabled = true
    size = 4
    passes = 2
    new_optimizations = true
    contrast = 1
    popups = true
    popups_ignorealpha = 0.4
  }

  active_opacity = 0.9
  inactive_opacity = 0.8
  fullscreen_opacity = 1
}

# --
# Animations
# --

animations {
  first_launch_animation = false
  enabled = true

  # Animation curves
  bezier = linear, 0, 0, 1, 1
  bezier = md3_standard, 0.2, 0, 0, 1
  bezier = md3_decel, 0.05, 0.7, 0.1, 1
  bezier = md3_accel, 0.3, 0, 0.8, 0.15
  bezier = overshot, 0.05, 0.9, 0.1, 1.1
  bezier = crazyshot, 0.1, 1.5, 0.76, 0.92
  bezier = hyprnostretch, 0.05, 0.9, 0.1, 1.0
  bezier = menu_decel, 0.1, 1, 0, 1
  bezier = menu_accel, 0.38, 0.04, 1, 0.07
  bezier = easeInOutCirc, 0.85, 0, 0.15, 1
  bezier = easeOutCirc, 0, 0.55, 0.45, 1
  bezier = easeOutExpo, 0.16, 1, 0.3, 1
  bezier = softAcDecel, 0.26, 0.26, 0.15, 1
  bezier = md2, 0.4, 0, 0.2, 1 # use with .2s duration

  # Animation configs
  animation = windows, 1, 3, md3_decel, popin 60%
  animation = windowsIn, 1, 3, md3_decel, popin 60%
  animation = windowsOut, 1, 3, md3_accel, popin 60%
  animation = border, 1, 10, default
  animation = fade, 1, 3, md3_decel
  # animation = layers, 1, 2, md3_decel, slide
  animation = layersIn, 1, 3, menu_decel, slide
  animation = layersOut, 1, 1.6, menu_accel
  animation = fadeLayersIn, 1, 2, menu_decel
  animation = fadeLayersOut, 1, 4.5, menu_accel
  animation = workspaces, 1, 7, menu_decel, slide
  # animation = workspaces, 1, 2.5, softAcDecel, slide
  # animation = workspaces, 1, 7, menu_decel, slidefade 15%
  # animation = specialWorkspace, 1, 3, md3_decel, slidefadevert 15%
  animation = specialWorkspace, 1, 3, md3_decel, slidevert
}

# --
# Input
# --

input {
  kb_layout = fr
  numlock_by_default = true
  sensitivity = -0.3
  accel_profile = flat
  follow_mouse = 1
  special_fallthrough = true

  touchpad {
    disable_while_typing = true
    natural_scroll = true
    clickfinger_behavior = true
    scroll_factor = 0.7
  }


}

device {
  name = elan06fa:00-04f3:31dd-touchpad
  sensitivity = 0
  accel_profile = adaptive
}

# --
# Gestures
# --

gestures {
  workspace_swipe = true
  workspace_swipe_distance = 400
  workspace_swipe_cancel_ratio = 0.2
  workspace_swipe_min_speed_to_force = 5
}

# --
# Misc
# --

misc {
  disable_hyprland_logo = true
  disable_splash_rendering = true

  font_family = SF Pro Display
  new_window_takes_over_fullscreen = true

  vfr = 1
  vrr = 2
}

# --
# Layout config
# --

dwindle {
  pseudotile = true
  preserve_split = true
}

# --
# Xwayland
# --

xwayland {
  force_zero_scaling = true
}

# --
# Plugins config
# --

plugin {
  hyprsplit {
    num_workspaces = 9
  }

  overview {
    workspaceActiveBorder = $color2
    dragAlpha = 0.6

    autoDrag = true
    autoScroll = true
    exitOnClick = true
    exitOnSwitch = true
  }
}
